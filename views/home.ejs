<%- include("partials/header.ejs"); -%>

<h1>Home</h1>
<p><%=Content %></p>
 
<% posts.forEach(function(post){ %>
   <h1> <%=(post.title); %></h1> 
   <% if(post.content.length>100){ %>
    <% var slicedContent= post.content.slice(0,100)+"..."; %>
    
   <% } %>
   <p><%=( slicedContent); %>
      <a href="/posts/<%= post.title%>">Read more</a></p>
<% }); %>


